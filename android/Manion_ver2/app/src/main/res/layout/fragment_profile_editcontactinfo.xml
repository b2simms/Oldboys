<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/row_header_middle_greenbar"
            android:id="@+id/relativeLayout4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="@color/SubmenuTitle"
                android:id="@+id/textView92"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:id="@+id/edit_save"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="15dp"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/SubmenuTitle"
                android:layout_alignParentTop="true"
                android:text="SAVE"
                android:background="@drawable/popupwindow_button"
                android:layout_marginTop="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:id="@+id/edit_cancel"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:textColor="@color/SubmenuTitle"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView92"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:text="CANCEL"
                android:background="@drawable/popupwindow_button"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/relativeLayout4">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carolyn.muir@gmail.com"
            android:id="@+id/edit_email"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView27"
            android:layout_alignStart="@+id/textView27"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:id="@+id/textView26"
            android:textStyle="bold"
            android:textColor="@color/FragmentTitle"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(506)675-2525"
            android:id="@+id/edit_phone_num"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textColor="@color/FragmentTitle"
            android:id="@+id/textView32"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_below="@+id/textView43"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView12"
            android:layout_below="@+id/edit_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/FragmentTitle"
            android:id="@+id/textView27"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/edit_phone_num"
            android:layout_alignStart="@+id/edit_phone_num"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Street:"
            android:id="@+id/textView28"
            android:layout_below="@+id/textView26"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textView43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="City:"
            android:id="@+id/textView29"
            android:layout_below="@+id/textView28"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textView43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Province:"
            android:id="@+id/textView31"
            android:layout_below="@+id/textView29"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textView43" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 Huntington Ln"
            android:id="@+id/edit_address_st"
            android:layout_toEndOf="@+id/textView28"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/textView28"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="St. Catherines"
            android:id="@+id/edit_address_city"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/textView29"
            android:layout_alignBottom="@+id/textView29"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON"
            android:id="@+id/edit_address_province"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/textView31"
            android:layout_alignBottom="@+id/textView31"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Postal Code:"
            android:id="@+id/textView43"
            android:layout_below="@+id/textView31"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L2S 2R5"
            android:id="@+id/edit_address_postal"
            android:layout_toEndOf="@+id/textView43"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/textView43"
            android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

    </RelativeLayout>
